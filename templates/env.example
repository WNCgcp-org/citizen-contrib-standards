# Wellnecity Application Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit the .env file to git

# ===========================================
# DATABASE
# ===========================================

# Local development (Docker MongoDB)
MONGODB_URI=mongodb://dev:dev@localhost:27017/app?authSource=admin

# Production (provided by Engineering at deployment)
# MONGODB_URI=mongodb+srv://...

# ===========================================
# APPLICATION
# ===========================================

# Application URL (for auth callbacks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# ===========================================
# AUTHENTICATION (if using @wellnecity/auth)
# ===========================================

# Auth secret (generate with: openssl rand -base64 32)
AUTH_SECRET=your-secret-here

# ===========================================
# EXTERNAL APIS (add as needed)
# ===========================================

# Anthropic Claude API (if using AI features)
# ANTHROPIC_API_KEY=sk-ant-xxxxx

# ===========================================
# OPTIONAL
# ===========================================

# Enable debug logging
# DEBUG=true

# Port (if not using default 3000)
# PORT=3000
